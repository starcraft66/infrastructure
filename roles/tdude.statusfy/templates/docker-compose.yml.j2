version: '2'
services:
  statusfy:
    image: bazzite/statusfy:{{ statusfy_docker_version }}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - "{{ statusfy_data_folder }}:/usr/src/app"
    restart: unless-stopped
    networks:
      - status
    labels:
      - "traefik.enable=true"
      - "traefik.frontend.rule=Host:status.tdude.co"
      - "traefik.docker.network=status"
      - "traefik.port=3000"

networks:
  status:
    external:
      name: status