version: '2'
services:
  web:
    image: 'gitlab/gitlab-ce:{{ gitlab_docker_version }}'
    restart: unless-stopped
    hostname: '{{ gitlab_hostname }}'
    environment:
      GITLAB_OMNIBUS_CONFIG: |
        external_url '{{ gitlab_external_url }}'
        nginx['listen_port'] = 80
        nginx['listen_https'] = false
        nginx['proxy_set_headers'] = {
          "X-Forwarded-Proto" => "https",
          "X-Forwarded-Ssl" => "on"
        }
        nginx['real_ip_header'] = 'X-Real-IP'
        nginx['real_ip_recursive'] = 'on'
        gitlab_rails['smtp_enable'] = true
        gitlab_rails['smtp_address'] = "{{ gitlab_smtp_server }}"
        gitlab_rails['smtp_port'] = {{ gitlab_smtp_port }}
        gitlab_rails['gitlab_email_from'] = '{{ gitlab_email_from }}'
        gitlab_rails['gitlab_email_reply_to'] = '{{ gitlab_email_reply_to }}'
        gitlab_rails['gitlab_shell_ssh_port'] = {{ gitlab_ssh_port }}
    ports:
      - '158.69.118.62:{{ gitlab_ssh_port }}:22'
      - '2607:5300:60:873e::3:22:22'
      - '2607:5300:60:873e::3:{{ gitlab_ssh_port }}:22'
    volumes:
      - '{{ gitlab_config_folder }}:/etc/gitlab'
      - '{{ gitlab_logs_folder }}:/var/log/gitlab'
      - '{{ gitlab_data_folder }}:/var/opt/gitlab'
      - '/etc/timezone:/etc/timezone:ro'
      - '/etc/localtime:/etc/localtime:ro'
    labels:
      - "traefik.enable=true"
      - "traefik.frontend.rule=Host:git.tdude.co"
      - "traefik.docker.network=gitlab"
      - "traefik.port=80"
{{ traefik_sts_header_labels }}

    networks:
      - gitlab
  runner:
    image: gitlab/gitlab-runner:latest
    restart: unless-stopped
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock'
      - '{{ gitlab_runner_config_folder }}:/etc/gitlab-runner'
    networks:
      - gitlab

networks:
  gitlab:
    external:
      name: gitlab