{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "nix": {
        "enabled": true,
        "lockFileMaintenance": {
            "enabled": true,
        },
    },
    "packageRules": [
        {
            "description": "Group mediaserver stack dependencies which usually have no proper semver versioning",
            "matchFileNames": [
                "k8s/apps/mediaserver/**"
            ],
            "matchManagers": [
                "kustomize",
                "helm-values",
            ],
            "groupName": "mediaserver packages",
            "pinDigests": true,
        },
        // home-automation packages
        {
            "description": "Group home-automation stack dependencies",
            "matchFileNames": [
                "k8s/apps/home-automation/**"
            ],
            "matchManagers": [
                "kustomize",
                "helm-values",
            ],
            "groupName": "home automation packages",
            "pinDigests": true,
        },
        {
            "description": "qbittorrent: ignore bogus ubuntu-versioned tags (20.x)",
            "matchPackageNames": ["ghcr.io/linuxserver/qbittorrent"],
            "allowedVersions": "<14",
        },
    ]
}